{% block header %}
    <header id="header" role="banner">
            <div class="{{ container }}">
                <div class="header_left col-md-2 col-sm-2 col-xs-12">
                    {% if page.header_left %}
                        <div class="header-left_content">
                            {{ page.header_left }}
                        </div>
                    {% endif %}
                </div>      
                <div class="header_center col-md-6 col-sm-6 col-xs-12">
                    {% if page.header_center %}
                        <div class="header_center_content">
                            {{ page.header_center }}
                        </div>
                    {% endif %}
                </div> 
                <div class="header_right col-md-4 col-sm-4 col-xs-12">
                    {% if (page.header_right) %}
                        <div class="header_right_content">
                            <div class="search_open">                               
                                <div class='search glyphicon glyphicon-search '>
                                </div>                               
                                <i class="fa fa-times" aria-hidden="true"></i>
                            </div>
                            {{ page.header_right }}
                        </div>
                    {% endif %}
                </div>
            </div>
    </header>
{% endblock %}
